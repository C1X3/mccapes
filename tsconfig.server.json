{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "outDir": "./dist",
      "paths": {
        "@/*": ["./src/*"],
        "@generated/*": [
        "./generated/*"
      ]
      }
    },
    "include": ["src/scripts/**/*.ts"],
    "exclude": ["node_modules", "generated", ".next", "dist"]
  }