{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@generated": [
        "./generated"
      ],
      "@components": [
        "./src/components/*"
      ],
      "@views": [
        "./src/views/*"
      ],
      "@utils": [
        "./src/utils/*"
      ],
      "@context": [
        "./src/context/*"
      ],
      "@hooks": [
        "./src/hooks/*"
      ],
      "@styles": [
        "./src/styles/*"
      ],
      "@types": [
        "./src/types/*"
      ],
      "@/server": [
        "./src/server/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "generated"
  ]
}
