model Product {
  id          String @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  slug        String @unique

  stock            String[]
  additionalImages String[]
  category         String
  rating           Float
  badge            String?
  features         String[]
  order            Int @default(0)

  slashPrice Float?
  hideHomePage Boolean @default(false)
  hideProductPage Boolean @default(false)
  isFeatured Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  OrderItem OrderItem[]
}
