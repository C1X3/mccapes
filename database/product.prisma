enum ProductType {
  CAPE
  STANDARD
}

model Product {
  id          String @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  slug        String @unique
  productType ProductType @default(CAPE)
  capeTexturePng Bytes?
  backgroundImageUrl String?

  stock            String[]
  additionalImages String[]
  category         String
  rating           Float
  badge            String?
  features         String[]
  order            Int @default(0)
  stripeProductName String?

  slashPrice Float?
  hideHomePage Boolean @default(false)
  hideProductPage Boolean @default(false)
  isFeatured Boolean @default(false)

  stripeId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  OrderItem OrderItem[]
}
